<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">


    <RelativeLayout
        android:paddingBottom="16dp"
        android:id="@+id/container_position"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:background="@drawable/card_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView

            android:id="@+id/post_Position_Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="21dp"
            android:text="Simple Title Text "
            android:textColor="@color/title_text_color"
            android:textStyle="bold" />


        <Button
            android:id="@+id/post_Position_Button_ShowPosition"

            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_Position_Username"
            android:layout_alignStart="@+id/post_Text_Username"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:lineSpacingExtra="8dp"


            android:text="MOSTRA POSIZONE CODNIVISA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_Position_Username" />

        <Button
            android:id="@+id/tv_date_p"
            android:layout_width="86dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:text="TextView"
            android:textColor="@color/content_text_color"
            android:visibility="invisible" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/post_Position_ProfileImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignBottom="@+id/post_Position_Username"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_account_box_24"
            app:shapeAppearance="@style/RoundedSquare"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>




